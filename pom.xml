<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>MM-NEAT</groupId>
	<artifactId>MM-NEAT</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>MM-NEAT</name>
	<url>http://maven.apache.org</url>

	<properties>

		<maven-shade-plugin.version>2.4.3</maven-shade-plugin.version>

		<java.version>1.8</java.version>

		<unirest.version>1.4.9</unirest.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<javacv.version>1.4.1</javacv.version>
		<javacpp.version>1.4.1</javacpp.version>
		<javacpp-presets.version>1.4.1</javacpp-presets.version>
		<opencv.version>3.4.1</opencv.version>
		<ffmpeg.version>3.4.2</ffmpeg.version>
		<logback.version>1.2.3</logback.version>
		<lombok.version>1.16.16</lombok.version>
		<jcommon.version>1.0.23</jcommon.version>

	</properties>

	<build>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>edu.southwestern.MMNEAT.MMNEAT</mainClass>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<repositories>
		<repository>
			<id>project.local</id>
			<name>project</name>
			<url>file:${project.basedir}/libs</url>
		</repository>

		<!-- For DL4J and RL4J -->
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</repository>
	</repositories>

	<distributionManagement>
		<snapshotRepository>
			<id>sonatype-nexus-snapshots</id>
			<name>Sonatype Nexus snapshot repository</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>nexus-releases</id>
			<name>Nexus Release Repository</name>
			<url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>
